root = true

[*.bash]
binary_next_line   = false
function_next_line = false
indent_style       = space
indent_size        = 2
keep_padding       = true
shell_variant      = bash
space_redirects    = true
switch_case_indent = true

[*.sh]
binary_next_line   = false
function_next_line = false
indent_style       = space
indent_size        = 2
keep_padding       = true
shell_variant      = posix
space_redirects    = true
switch_case_indent = true

[*.fish]
binary_next_line   = false
function_next_line = false
indent_style       = space
indent_size        = 2
keep_padding       = true
shell_variant      = fish
space_redirects    = true
switch_case_indent = true
